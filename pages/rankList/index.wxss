/* pages/rankList/index.wxss */
/* 书籍box */
.Books_box {
  width: 100%;
  margin-top: 30rpx;
}
.Books_box .Book_list {
  width: 90%;
  height: 210rpx;
  margin: 20rpx auto;
}
.Books_box .Book_list .Book_image {
  width: 23%;
  height: 100%;
  float: left;
  box-shadow: 5px 5px 5px #888888;
}
.Books_box .Book_list .Book_image image {
  width: 100%;
  height: 100%;
}
.Book_content {
  display: flex;
  width: 76%;
  height: 100%;
  float: left;
  flex-direction: column;
  justify-content: space-around;
}
.Book_content view {
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.Book_content view:nth-child(2),
.Book_content view:nth-child(3) {
  font-size: 26rpx;
  color: rgb(179, 178, 176);
}
.Book_content view:nth-child(4) {
  font-size: 26rpx;
  color: red;
}

/* 没有数据 */
.noInfo {
  height: calc(100vh - 44px);
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(179, 178, 176);
  font-size: 40rpx;
}