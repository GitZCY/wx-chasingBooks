/* pages/category/index.wxss */
/* 顶部选项 */
.all_list {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: white;
}
.null_box {
  width: 100%;
  height: 180rpx;
}
.top_listbox,
.bottom_listbox {
  width: 100%;
  height: 90rpx;
  display: flex;
  white-space: nowrap;
  overflow-x: scroll;
  align-items: center;
}
.top_listbox{
  margin-top: 10rpx;
}
.bottom_listbox{
  padding-bottom: 10rpx;
  border-bottom: 1px solid rgb(240, 240, 240);
}
.top_listbox .top_list,
.bottom_listbox .bottom_list {
  height: 60rpx;
  margin-left: 30rpx;
  background-color: rgb(240, 240, 240);
  line-height: 60rpx;
  text-align: center;
  border-radius: 20rpx;
  display: inline-block;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #ccc;
}
/* 改变顶部选项bgc */
.top_listbox .Bgc_top,
.bottom_listbox .Bgc_bottom {
  background-color: red; 
  color: black;
}

/* 没有数据 */
.noInfo {
  margin: 0 auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgb(179, 178, 176);
  font-size: 40rpx;
}

/* 书籍box */
.Books_box {
  width: 100%;
  margin-top: 30rpx;
}
.Books_box .Book_list {
  width: 90%;
  height: 210rpx;
  margin: 20rpx auto;
}
.Books_box .Book_list .Book_image {
  width: 23%;
  height: 100%;
  float: left;
  box-shadow: 5px 5px 5px #888888;
}
.Books_box .Book_list .Book_image image {
  width: 100%;
  height: 100%;
}
.Book_content {
  display: flex;
  width: 76%;
  height: 100%;
  float: left;
  flex-direction: column;
  justify-content: space-around;
}
.Book_content view {
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.Book_content view:nth-child(2),
.Book_content view:nth-child(3) {
  font-size: 26rpx;
  color: rgb(179, 178, 176);
}
.Book_content view:nth-child(4) {
  font-size: 26rpx;
  color: red;
}