/* pages/classification/index.wxss */

.classification_leftbox {
  height: 100vh;
  width: 19.5vw;
  position: fixed;
  left: 0;
  top: 0;
}

.classification_left {
  width: 100%;
  height: 90%;
  border-right: 1.5px solid #ccc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.classification_left .left_borderbox {
  width: 70%;
  height: 100%;
  line-height: 80rpx;
  margin: 0 auto;
}
.classification_left .classification_list {
  width: 100%;
  height: 80rpx;
  text-align: center;
  margin-top: 10rpx;
}

.left_border {
  border-left: 2.5px solid red;
  border-right: 2.5px solid rgba(255, 255, 255, 0);
  color: red;
}

.classification_list text {
  height: 100%;
  display: inline-block;
  border-bottom: 1px solid #ccc;
  margin: 0 auto;
}

.classification_rightbox {
  width: 80vw;
  height: 100vh;
  /* overflow-y: scroll; */
  margin-left: 20vw;
}

.male_box {
  width: 98%;
  margin: 20rpx auto 0;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

/* 男生栏 */
.sex_male {
  text-align: center;
  padding-top: 2.5vh;
}

.sex_male text {
  font-size: 18px;
  color: #ccc;
  position: relative;
}

.male_list {
  width: 45%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  background: rgb(245, 245, 245);
  padding: 0 0 0 10rpx;
}
.male_leftbox {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.male_leftbox .name_top {
  font-size: 28rpx;
  display: block;
}
.male_leftbox .name_bottom {
  font-size: 20rpx;
  display: block;
  color: #999999;
}

.male_list .male_img {
  width: 35%;
}
.male_list .male_img image {
  width: 100%;
  height: 130rpx;
}


/* 伪类 */
.sex_male text::after, .sex_male	text::before {
  content: "";
  position: absolute;
  z-index: 1;
  background-color: #ccc;
  height: 1px;
  width: 200rpx;
  top: 50%;
}

.sex_male	text::after {
  left: 100rpx;
}

.sex_male	text::before {
  right: 100rpx;
}
